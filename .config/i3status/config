order += "battery 0"
order += "memory"
order += "tztime seoul"
order += "tztime local"

volume master {
   format = "ï€¨ %volume"
   format_muted = "ï€¦ %volume"
   device = "default"
   mixer = "Master"
   mixer_idx = 0
}

disk "/" {
    format = "%avail"
}

wireless wlp2s0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp4s0f4u1 {
    format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
    format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

memory {
    format = "MEM USED: %used (FREE: %available)"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

